<%= form_for @account do |f| %>
  <div class="form-group field">
    <%= f.label :general_income %>
    <%= f.number_field :general_income, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group field">
    <%= f.label :other_income %>
    <%= f.number_field :other_income, class: "form-control" %>
  </div>

  <div class="form-group field">
    <%= f.label :general_expenses %>
    <%= f.number_field :general_expenses, class: "form-control" %>
  </div>

  <div class="form-group field">
    <%= f.label :other_expenses %>
    <%= f.number_field :other_expenses, class: "form-control" %>
  </div>

  <div class="form-group field">
    <%= f.label :label %>
    <%= f.text_field :label, class: "form-control" %>
  </div>

  <div class="form-group field">
    <%= f.label :memo %>
    <%= f.text_field :memo, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "提交", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "accounts/shared/links" %>
